<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_83747" href="/users/83747/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field:title, class:"form-controll"%>
      </div>
      <div class="form-group">
        <p for="book_opinion">Opinion</p>
        <%= f.text_area:body %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class:"btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>